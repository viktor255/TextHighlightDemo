{
  "name": "typescript-playground",
  "version": "1.0.0",
  "description": "A small TypeScript playground for running code via Node.js",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "dev": "ts-node-dev --respawn src/index.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "typescript",
    "playground",
    "node"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "prettier": "^3.5.3"
  }
}
